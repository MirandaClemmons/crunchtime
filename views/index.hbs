{{> header}}

<a href="#" data-toggle="modal" data-target="#addTaskModal"><i class="fa fa-plus fa-2x pull-right"></i></a>
<table class="table">
    {{#each tasks}}
      <tr>
        <td>
          <input id="checkbox{{name}}" type="checkbox">
        </td>
        <td>
          <strong>{{name}}</strong>
          <br/>
            {{course}}
        </td>
      </tr>
    {{/each}}
</table>

<!-- Add Task Modal -->
<div class="modal fade" id="addTaskModal" tabindex="-1" role="dialog" aria-labelledby="addTaskTitle" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="addTaskTitle">Add Task</h4>
      </div>
      <div class="modal-body">
        <div class="text-center">
          <button class="btn btn-primary btn-lg"><i class="fa fa-plus"></i> Add from Source</button>
        </div>
        <hr />
        <p><strong>Add Task Manually</strong></p>
        <div class="form-group">
          <label for="taskCourse">Course</label>
          <input type="text" class="form-control" id="taskCourse" placeholder="">
        </div>
        <div class="form-group">
          <label for="taskTitle">Task Title</label>
          <input type="text" class="form-control" id="taskTitle" placeholder="">
          <input type="text" class="form-control" id="taskTitle" placeholder="">
          <input type="text" class="form-control" id="taskTitle" placeholder="">
          <input type="text" class="form-control" id="taskTitle" placeholder="">
          <a href="#" class="pull-right"><i class="fa fa-plus"></i> Add more</a>
        </div>
        <div class="form-group">
          <button type="button" class="btn btn-primary">Add task</button>
        </div>
      </div>
    </div>
  </div>
</div>
{{> footer}}